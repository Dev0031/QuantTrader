{
  "Risk": {
    "MaxRiskPerTradePercent": 2.0,
    "MaxDrawdownPercent": 5.0,
    "MinRiskRewardRatio": 2.0,
    "MaxOpenPositions": 5,
    "MaxDailyLoss": 3.0,
    "KillSwitchEnabled": true
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379",
    "Database": "Host=localhost;Database=quanttrader;Username=postgres;Password=postgres"
  },
  "EventBus": {
    "ConnectionString": "localhost:6379",
    "Provider": "Redis"
  },
  "TradingMode": {
    "Mode": "Paper",
    "AutoFallbackToPaperOnCircuitOpen": true,
    "PaperFillLatencyMs": 50
  },
  "Polly": {
    "BinanceCircuitBreakerBreakDurationSeconds": 60,
    "BinanceRetryMaxAttempts": 3,
    "RedisCircuitBreakerBreakDurationSeconds": 30
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "QuantTrader.RiskManager": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} | {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/risk-manager-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
