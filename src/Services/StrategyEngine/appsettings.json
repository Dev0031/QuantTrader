{
  "Strategy": {
    "EnabledStrategies": [
      "MaCrossover",
      "Momentum",
      "MeanReversion",
      "Breakout"
    ],
    "DefaultTimeframe": "1h",
    "MinConfidenceScore": 0.7
  },
  "MaCrossover": {
    "FastPeriod": 20,
    "SlowPeriod": 50,
    "AtrPeriod": 14,
    "AtrStopMultiplier": 2.0,
    "AtrProfitMultiplier": 3.0
  },
  "Momentum": {
    "RsiOversold": 30.0,
    "RsiOverbought": 70.0,
    "RsiPeriod": 14,
    "MacdFastPeriod": 12,
    "MacdSlowPeriod": 26,
    "MacdSignalPeriod": 9,
    "AtrPeriod": 14,
    "SwingLookback": 10
  },
  "MeanReversion": {
    "BollingerPeriod": 20,
    "BollingerStdDev": 2.0,
    "RsiPeriod": 14,
    "RsiOversold": 35.0,
    "RsiOverbought": 65.0,
    "AtrPeriod": 14,
    "AtrStopMultiplier": 1.0
  },
  "Breakout": {
    "RangePeriod": 20,
    "VolumeMultiplier": 1.5,
    "AtrPeriod": 14,
    "AtrStopMultiplier": 1.5,
    "AtrProfitMultiplier": 3.0
  },
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=quanttrader;Username=quanttrader;Password=changeme;Include Error Detail=true",
    "Redis": "localhost:6379,abortConnect=false"
  },
  "EventBus": {
    "Provider": "Redis",
    "ConnectionString": "localhost:6379,abortConnect=false",
    "ConsumerGroup": "strategy-engine",
    "MaxRetries": 3,
    "RetryDelayMs": 1000
  },
  "TradingMode": {
    "Mode": "Paper",
    "AutoFallbackToPaperOnCircuitOpen": true,
    "PaperFillLatencyMs": 50
  },
  "Polly": {
    "BinanceCircuitBreakerBreakDurationSeconds": 60,
    "BinanceRetryMaxAttempts": 3,
    "RedisCircuitBreakerBreakDurationSeconds": 30
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} | {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/strategy-engine-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} | {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
