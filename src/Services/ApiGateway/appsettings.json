{
  "Jwt": {
    "Authority": "https://login.microsoftonline.com/your-tenant-id/v2.0",
    "Audience": "api://quanttrader",
    "SecretKey": "super-secret-dev-key-min-32-chars!!"
  },

  "AllowedOrigins": [
    "http://localhost:5173"
  ],

  "ConnectionStrings": {
    "TradingDb": "Host=localhost;Port=5432;Database=quanttrader;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },

  "EventBus": {
    "UseInMemory": true,
    "ConnectionString": ""
  },

  "Risk": {
    "MaxRiskPerTradePercent": 2.0,
    "MaxDrawdownPercent": 5.0,
    "MinRiskRewardRatio": 2.0,
    "MaxOpenPositions": 5,
    "MaxDailyLoss": 500,
    "KillSwitchEnabled": true
  },

  "Strategy": {
    "EnabledStrategies": [
      "MeanReversion",
      "TrendFollowing"
    ],
    "DefaultTimeframe": "1h",
    "MinConfidenceScore": 0.7
  },

  "RateLimiting": {
    "PermitLimit": 100,
    "WindowSeconds": 60
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "TradingMode": {
    "Mode": "Paper",
    "AutoFallbackToPaperOnCircuitOpen": true,
    "PaperFillLatencyMs": 50
  },

  "Polly": {
    "BinanceCircuitBreakerBreakDurationSeconds": 60,
    "BinanceRetryMaxAttempts": 3,
    "RedisCircuitBreakerBreakDurationSeconds": 30
  },

  "AllowedHosts": "*"
}
